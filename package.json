{
  "name": "felix-utils",
  "version": "1.0.0",
  "description": "A collection of useful utility functions and date handling methods",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run lint && npm run typecheck && npm run test && npm run build",
    "release": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "size-check": "bundlesize",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixzhu97/felix-utils.git"
  },
  "keywords": [
    "utils",
    "utilities",
    "date",
    "helpers",
    "typescript"
  ],
  "author": "Felix Zhu",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "bundlesize": "^0.18.1",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "bundlesize": [
    {
      "path": "./dist/index.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./dist/index.esm.js",
      "maxSize": "50 kB"
    }
  ]
}
